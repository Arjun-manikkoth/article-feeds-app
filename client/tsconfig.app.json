{
    "compilerOptions": {
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "target": "ES2020",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "baseUrl": "src",
        "paths": {
            "@/*": ["./*"]
        },
        "jsx": "react-jsx",
        "strict": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noEmit": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules", "dist"]
}
